<h3 id="<%= question.title.parameterize %>"><%= question.title %></h3>
<table id="question_<%= question.id %>_results_table">
  <% if question.essay? %>
    <thead>
      <tr>
        <th scope="col"><%= t("polls.show.results.essay.with_answer") %></th>
        <th scope="col"><%= t("polls.show.results.essay.without_answer") %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td id="question_<%= question.id %>_with_answer_result">
          <%= essay_answered_count %>
          (<%= essay_answered_percentage.round(2) %>%)
        </td>
        <td id="question_<%= question.id %>_without_answer_result">
          <%= essay_unanswered_count %>
          (<%= essay_unanswered_percentage.round(2) %>%)
        </td>
      </tr>
    </tbody>
  <% else %>
    <thead>
      <tr>
        <%- question.question_options.each do |option| %>
          <th scope="col" class="<%= option_styles(option) %>">
            <% if most_voted_option?(option) %>
              <span class="show-for-sr"><%= t("polls.show.results.most_voted_answer") %></span>
            <% end %>
            <%= option.title %>
          </th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <tr>
        <%- question.question_options.each do |option| %>
          <td id="option_<%= option.id %>_result" class="<%= option_styles(option) %>">
            <%= option.total_votes %>
            (<%= option.total_votes_percentage.round(2) %>%)
          </td>
        <% end %>
      </tr>
    </tbody>
  <% end %>
</table>
